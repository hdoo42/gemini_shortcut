{
  "manifest_version": 3,
  "name": "Gemini shortcut",
  "version": "1.0.3",
  "description": "Adds shortcuts for major features on the gemini.google.com",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
